@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@IsDarkTheme" Theme="_theme" />
<MudDialogProvider FullWidth="true" MaxWidth="MaxWidth.Medium"
                   CloseButton="true"
                   DisableBackdropClick="false"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<HeadContent>
    <ConditionalHeadContent IsDarkTheme="@IsDarkTheme" />
</HeadContent>

<MudLayout>
    <MudAppBar Elevation="2" Color="Color.Tertiary">
        <MudSpacer />
        <MudTooltip Duration="1_000" Text="Open settings dialog?" Arrow=true Placement="Placement.Left">
            <MudIconButton Icon="@Icons.Material.TwoTone.Settings" Color="Color.Inherit"
                           Size="Size.Large" OnClick="OnShowSettingsDialog" />
        </MudTooltip>
        <MudTooltip Duration="1_000" Text=@ThemeIconText Arrow=true Placement="Placement.Left">
            <MudIconButton Size="Size.Large" Color="@Color.Inherit"
                           Icon="@ThemeIcon" OnClick="OnToggleDarkMode" />
        </MudTooltip>
        <MudTooltip Duration="1_000" Text="Open GitHub repository link (in new tab)?" Arrow=true Placement="Placement.Left">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit"
                           Size="Size.Large" Target="_blank"
                           Href="https://github.com/IEvangelist/csharp-history-explorer" />
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4" Style="overflow-y: auto;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>